{
  "name": "patchup",
  "version": "0.2.0",
  "description": "Automatically update the packages in your projects",
  "bin": {
    "patchup": "./dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && chmod +x dist/index.js",
    "dev": "tsc -w",
    "test": "tsc --noEmit && biome check . && vitest run src",
    "prepublishOnly": "npm test && npm run build"
  },
  "author": "",
  "keywords": [
    "update",
    "upgrade",
    "dependencies",
    "dependency-management",
    "packages",
    "outdated",
    "automation",
    "cli",
    "testing"
  ],
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "@inquirer/prompts": "^8.3.0",
    "chalk": "^5.6.2",
    "command-line-args": "^6.0.1",
    "command-line-usage": "^7.0.3",
    "execa": "^9.6.1",
    "semver": "7.7.4",
    "vitest": "4.0.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@types/command-line-args": "^5.2.3",
    "@types/command-line-usage": "^5.0.4",
    "@types/node": "^25.0.3",
    "@types/semver": "^7.7.1",
    "typescript": "^5.9.3"
  }
}
